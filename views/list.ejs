<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bread (Browse, Read, Edit, Add, Delete) and Pagination</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <script src="/js/util.js"></script>
</head>

<body>
    <div>
        <div class="head">
            <h1>SQLite Bread (Browse, Read, Edit, Add, Delete) and Pagination</h1>
        </div>
        <div>
            <form action="/" method="get">
                <div>
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Insert your name" value="<%= query.name %>"/><br>
                </div>
                <div>
                    <label for="height">Height</label>
                    <input type="number" name="height" placeholder="insert your height"
                        value="<%= query.height %>" /><br>
                </div>
                <div>
                    <label for="weight">Weight</label>
                    <input type="number" step="0.1" name="weight" placeholder="insert your weight"
                        value="<%= query.weight %>" /><br>
                </div>
                <div>
                    <label for="birthdate">Birth Date</label>
                    <div style="display: inline-block; margin-left: 10px; width: 82%;">
                        <input type="date" name="startdate" value="<%= query.startdate %>" /><span>s.d.</span> <input
                            type="date" name="enddate" value="<%= query.enddate %>" /><br>
                    </div>
                </div>
                <div>
                    <label for="married">Is Married</label>
                    <select name="married">
                        <option disabled selected> Have you married? </option><br>
                        <option value="true">Yes</option>
                        <option value="false">Not Yet</option>
                    </select>
                </div>
                <div style="display: block;">
                    <legend>Operation</legend>
                    <div>
                        <input type="radio" id="or" name="mode" value="or" checked>
                        <label for="or" style="width: 30px; margin-left: 0px;">OR</label>
                        <input type="radio" id="and" name="mode" value="and">
                        <label for="and" style="width: 30px; margin-left: 0px;">AND</label>
                    </div>
                </div>
                <div style="clear: both;">
                    <button type="submit">Search</button><a href="/" class="btn">Reset</a>
                </div>
            </form>
        </div>
        <table>
            <thead>
                <tr>
                    <th> No.</th>
                    <th> Name</th>
                    <th> Height</th>
                    <th> Weight</th>
                    <th> Birth Date </th>
                    <th> Is Married </th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index)=> { %>
                    <% if (item.married) {%>
                        <% married="Yes" %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.height %>
                                </td>
                                <td>
                                    <%= item.weight %>
                                </td>
                                <td>
                                    <%= item.birthdate %>
                                </td>
                                <td>
                                    <%= married %>
                                </td>
                                <td><a href="/edit/<%= item.id %>" class="b2">Update</a><a href="/delete/<%= item.id %>"
                                        onclick="return confirmation('<%= item.name %>')" class="b3">Delete</a></td>
                            </tr>
                            <% } %>
                                <% if (!item.married) {%>
                                    <% married="Not Yet" %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.height %>
                                            </td>
                                            <td>
                                                <%= item.weight %>
                                            </td>
                                            <td>
                                                <%= item.birthdate %>
                                            </td>
                                            <td>
                                                <%= married %>
                                            </td>
                                            <td><a href="/edit/<%= item.id %>" class="b2">Update</a><a
                                                    href="/delete/<%= item.id %>"
                                                    onclick="return confirmation('<%= item.name %>')" class="b3">Delete</a></td>
                                        </tr>
                                        <% } %>
                                            <% }) %>
            </tbody>
        </table>
        <div class="foot">
            <a href="add" class="b4">Add</a>
        </div>
    </div>
</body>

</html>